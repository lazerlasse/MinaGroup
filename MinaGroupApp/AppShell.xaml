<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MinaGroupApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MinaGroupApp"
    xmlns:pages="clr-namespace:MinaGroupApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Mina Group">

    <TabBar>
        <Tab
            Title="Forside"
            Icon="frontpage_house_icon.png">
            <ShellContent
                Route="FrontPage"
                ContentTemplate="{DataTemplate pages:FrontPage}" />
        </Tab>
        <Tab
            Title="Evalueringer"
            Icon="evaluationpage_journal_icon.png">
            <ShellContent
                Route="SelfEvaluationMainPage"
                ContentTemplate="{DataTemplate pages:SelfEvaluationMainPage}"/>
        </Tab>
    </TabBar>
</Shell>
