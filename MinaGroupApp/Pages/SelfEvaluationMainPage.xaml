<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:MinaGroupApp.ViewModels"
             xmlns:local="clr-namespace:MinaGroupApp.Pages"
             xmlns:dto="clr-namespace:MinaGroupApp.DataTransferObjects"
             x:Class="MinaGroupApp.Pages.SelfEvaluationMainPage"
             x:DataType="viewmodel:SelfEvaluationMainPageViewModel"
             Title="{Binding Title}">

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="*">

        <ScrollView
            Grid.Row="0"
            Grid.Column="0"
            Margin="10">

            <VerticalStackLayout
                Spacing="5">

                <Label
                    Text="Ikke Udfyldte"
                    FontAttributes="Bold"
                    FontSize="Medium"/>

                <Label
                    Text="Udfyldte Evalueringer"
                    FontAttributes="Bold"
                    FontSize="Medium" />

                <CollectionView
                    ItemsSource="{Binding SelfEvaluations}"
                    SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate
                            x:DataType="dto:SelfEvaluationResponseDto">
                            <HorizontalStackLayout
                                Spacing="10"
                                Margin="0,5,0,0">

                                <Label
                                    Text="{Binding EvaluationDate}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"/>

                            </HorizontalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>