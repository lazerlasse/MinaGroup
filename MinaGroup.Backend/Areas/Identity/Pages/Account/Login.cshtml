@page
@model LoginModel

@{
    ViewData["Title"] = "Log ind";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-3 border-0">
            <div class="card-body p-4">
                <h2 class="text-center mb-3">Log ind</h2>
                <p class="text-muted text-center mb-4">Brug din konto for at få adgang</p>
                <hr />

                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="navn@eksempel.dk" />
                        <label asp-for="Input.Email" class="form-label">E-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Adgangskode" />
                        <label asp-for="Input.Password" class="form-label">Adgangskode</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Husk mig</label>
                    </div>

                    <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">Log ind</button>

                    <div class="mt-3 text-center">
                        <p><a id="forgot-password" asp-page="./ForgotPassword">Glemt adgangskode?</a></p>
                        <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Gensend e-mailbekræftelse</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow rounded-3 border-0">
                <div class="card-body p-4 text-center">
                    <h5 class="mb-3">Log ind med en ekstern tjeneste</h5>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-primary w-100 mb-2" name="provider" value="@provider.Name">
                                Log ind med @provider.DisplayName
                            </button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}