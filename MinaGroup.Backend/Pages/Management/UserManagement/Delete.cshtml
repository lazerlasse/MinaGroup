@page "{id}"
@model MinaGroup.Backend.Pages.Management.UserManagement.DeleteModel
@{
    ViewData["Title"] = "Slet bruger";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-danger fw-bold mb-4">⚠️ Slet bruger</h2>

<div class="alert alert-danger rounded-3 shadow-sm">
    <strong>Advarsel!</strong> Denne handling vil <u>permanent slette</u> brugeren og kan ikke fortrydes.
</div>

<div class="card shadow-sm rounded-3 mb-4">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label fw-bold">Email</label>
            <input value="@Model.SelectedUser.Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Fulde navn</label>
            <input value="@Model.SelectedUser.FullName" class="form-control" readonly />
        </div>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="SelectedUser.Id" />

    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="bi bi-x-circle"></i> Annuller
    </a>
    <button type="submit" class="btn btn-outline-danger fw-bold me-2">
        <i class="bi bi-trash-fill"></i> Slet
    </button>
</form>