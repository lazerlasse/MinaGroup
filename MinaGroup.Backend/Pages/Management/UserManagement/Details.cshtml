@page "{id}"
@model MinaGroup.Backend.Pages.Management.UserManagement.DetailsModel

@{
    ViewData["Title"] = "Brugerdetaljer";
}

<h1 class="text-center display-4 fw-bold text-primary mb-4">@ViewData["Title"]</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="p-4 border rounded shadow-sm bg-light">

            <div class="mb-3">
                <label class="form-label fw-bold">Personnummer / CPR</label>
                <input value="@Model.User.PersonNumberCPR" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Fornavn</label>
                <input value="@Model.User.FirstName" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Efternavn</label>
                <input value="@Model.User.LastName" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Email</label>
                <input value="@Model.User.Email" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Telefon</label>
                <input value="@Model.User.PhoneNumber" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Startdato</label>
                <input value="@Model.User.JobStartDate?.ToString("dd.MM.yyyy")" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Slutdato</label>
                <input value="@Model.User.JobEndDate?.ToString("dd.MM.yyyy")" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Bruger Roller</label>
                <input value="@string.Join(", ", Model.User.Roles)" disabled class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Ugedage</label>
                <input value="@string.Join(", ", Model.User.Weekdays)" disabled class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-primary" asp-page="./Index">
                    <i class="bi bi-arrow-left-circle"></i> Tilbage
                </a>
                <div>
                    <a asp-page="./Edit" asp-route-id="@Model.User.Id" class="btn btn-outline-primary me-2">
                        <i class="bi bi-pencil-fill"></i> Rediger
                    </a>
                    <a asp-page="./Delete" asp-route-id="@Model.User.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash-fill"></i> Slet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>