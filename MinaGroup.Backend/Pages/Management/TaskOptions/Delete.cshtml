@page "{id}"
@model MinaGroup.Backend.Pages.Management.TaskOptions.DeleteModel
@{
    ViewData["Title"] = "Slet Arbejdsopgave/Værksted";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h2 class="text-danger fw-bold mb-4">⚠️ @ViewData["Title"]</h2>

<div class="alert alert-danger rounded-3 shadow-sm">
    <strong>Advarsel!</strong> Denne handling vil <u>permanent slette</u> opgaven/værkstedet og kan ikke fortrydes.
</div>

<div class="card shadow-sm rounded-3 mb-4">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label fw-bold">Arbejdsopgave/Værksted</label>
            <input value="@Model.TaskOption.TaskName" class="form-control" readonly />
        </div>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="TaskOption.TaskOptionId" />

    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="bi bi-x-circle"></i> Annuller
    </a>
    <button type="submit" class="btn btn-outline-danger fw-bold me-2">
        <i class="bi bi-trash-fill"></i> Slet
    </button>
</form>