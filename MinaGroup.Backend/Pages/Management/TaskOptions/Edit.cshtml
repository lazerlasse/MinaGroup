@page
@model MinaGroup.Backend.Pages.Management.TaskOptions.EditModel

@{
    ViewData["Title"] = "Rediger Arbejdsopgave/Værksted";
}

<h1 class="text-center display-4 fw-bold text-primary">@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TaskOption.TaskOptionId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="TaskOption.TaskName" class="control-label"></label>
                <input asp-for="TaskOption.TaskName" class="form-control" />
                <span asp-validation-for="TaskOption.TaskName" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <a class="btn btn-danger" asp-page="./Index">Fortryd</a>
                <input type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
