@page
@model MinaGroup.Backend.Pages.Management.IndexModel
@{
    ViewData["Title"] = "Mina Group Administrationspanel";
}

<div class="container mt-5">
    <h1 class="text-center display-4 mb-2 fw-bold text-primary">Administrationspanel</h1>
    <p class="text-center fs-5 text-muted mb-5">
        Velkommen til administrationspanelet. Her kan du administrere indhold, brugere og tekniske services.
    </p>

    <hr />

    @* INDHOLDSSTYRING *@
    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Leder") || User.IsInRole("Admin")))
    {
    <div class="mb-5">
        <h3 class="mb-3 text-secondary">Indholdsstyring</h3>
        <div class="row g-4">
            <div class="col-md-6 col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold">Arbejdsopgaver / Værksteder</h5>
                        <p class="card-text text-muted flex-grow-1">
                            Administrer værksteder og arbejdsopgaver som bruges i selvevalueringsskemaerne.
                        </p>
                        <a asp-page="/Management/TaskOptions/Index" class="btn btn-primary mt-auto">
                            Administrer
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

    @* BRUGERSTYRING *@
    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Leder")))
    {
        <div class="mb-5">
            <h3 class="mb-3 text-secondary">Brugerstyring</h3>
            <div class="row g-4">

                <div class="col-md-6 col-lg-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">Administrer Brugere</h5>
                            <p class="card-text text-muted flex-grow-1">
                                Se, rediger og administrer brugerkonti og deres information.
                            </p>
                            <a asp-page="/Management/UserManagement/Index" class="btn btn-primary mt-auto">
                                Administrer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @* SERVICES & INTEGRATIONER – kun Admin/SysAdmin *@
    @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
    {
        <div class="mb-5">
            <h3 class="mb-3 text-secondary">Services & integrationer</h3>
            <div class="row g-4">
                <div class="col-md-6 col-lg-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">Servicestyring</h5>
                            <p class="card-text text-muted flex-grow-1">
                                Konfigurer tekniske integrationer som fx Google Drive upload af PDF-filer og andre baggrundsservices.
                            </p>
                            <a asp-page="/Management/ServiceManagement/Index" class="btn btn-primary mt-auto">
                                Åbn servicestyring
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>