@page
@model MinaGroup.Backend.Pages.Management.SelfEvaluations.DeleteModel
@{
    ViewData["Title"] = "Slet selvevaluering";
}

<h2 class="text-danger fw-bold mb-4">⚠️ Slet selvevaluering</h2>

<div class="alert alert-danger rounded-3 shadow-sm">
    <strong>Advarsel!</strong> Denne handling vil <u>permanent slette</u> selvevalueringen og kan ikke fortrydes.
</div>

<hr />

<div class="card shadow-sm rounded-3 mb-4">
    <div class="card-body">

        <!-- Evalueringsdato -->
        <div class="mb-3">
            <label asp-for="SelfEvaluation.EvaluationDate" class="form-label fw-bold">Evalueringsdato</label>
            <input value="@Model.SelfEvaluation.EvaluationDate.ToShortDateString()" class="form-control" readonly />
        </div>

        <!-- Borger -->
        <div class="mb-3">
            <label asp-for="SelfEvaluation.User" class="form-label fw-bold"></label>
            <input asp-for="SelfEvaluation.User.FullName" class="form-control" readonly />
        </div>

        <!-- Kommentar fra leder -->
        <div class="mb-3">
            <label asp-for="SelfEvaluation.CommentFromLeader" class="form-label fw-bold"></label>
            <input asp-for="SelfEvaluation.CommentFromLeader" class="form-control" readonly />
        </div>

        <!-- Sidst Opdateret -->
        <div class="mb-3">
            <label asp-for="SelfEvaluation.LastUpdated" class="form-label fw-bold"></label>
            <input value="@Model.SelfEvaluation.LastUpdated.ToString(" dd.MM.yyyy HH:mm")" class="form-control" readonly />
        </div>

        <!-- Godkendt af -->
        <div class="mb-3">
            <label asp-for="SelfEvaluation.ApprovedByUser" class="form-label fw-bold"></label>
            <input asp-for="SelfEvaluation.ApprovedByUser.FullName" class="form-control" readonly />
        </div>

    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="SelfEvaluation.Id" />

    <button type="submit" class="btn btn-danger fw-bold me-2">
        <i class="bi bi-trash-fill"></i> Slet
    </button>
    <a asp-page="./Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Annuller
    </a>
</form>