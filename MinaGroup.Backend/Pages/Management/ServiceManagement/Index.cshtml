                        <p class="card-text text-muted flex-grow-1">
                            Beskrivelse af en kommende integration eller baggrundsservice.
                        </p>
                        <a asp-page="/Management/ServiceManagement/SomeOtherService" class="btn btn-outline-primary mt-auto">
                            Konfigurer
                        </a>
                    </div>
                </div>
            </div>
            *@

        </div>
    </div>

    <div class="mb-3">
        <a asp-page="/Management/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Tilbage til administrationspanel
        </a>
    </div>
</div>