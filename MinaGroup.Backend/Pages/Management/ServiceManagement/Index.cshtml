@page
@model MinaGroup.Backend.Pages.Management.ServiceManagement.IndexModel
@{
    ViewData["Title"] = "Serviceindstillinger";
}

<div class="container mt-5">
    <h1 class="text-center display-4 mb-2 fw-bold text-primary">Serviceindstillinger</h1>
    <p class="text-center fs-5 text-muted mb-4">
        Administrer integrationer for virksomheden.
    </p>

    <hr />

    @if (Model.CurrentOrganization == null)
    {
        <div class="alert alert-warning">
            Der er ikke tilknyttet nogen virksomhed til din bruger.
        </div>
    }
    else
    {
        <h3 class="mb-3 text-secondary">Google Drive integration</h3>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-primary fw-bold">
                            Google Drive – @Model.CurrentOrganization.Name
                        </h5>

                        @if (Model.GoogleDriveIntegration?.IsConnected == true)
                        {
                            <p class="card-text text-success">
                                Forbundet til Google Drive
                                @if (!string.IsNullOrEmpty(Model.GoogleDriveIntegration.ConnectedAccountEmail))
                                {
                                    <span>(@Model.GoogleDriveIntegration.ConnectedAccountEmail)</span>
                                }
                            </p>
                        }
                        else
                        {
                            <p class="card-text text-muted">
                                Ikke forbundet til Google Drive endnu.
                            </p>
                        }

                        <form method="post" asp-page-handler="SaveRootFolder" class="mt-3">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Root mappe-ID (Google Drive)</label>
                                <input asp-for="RootFolderId" class="form-control" />
                                <span class="form-text">
                                    Angiv evt. mappe-ID hvor PDF-filerne skal placeres. Tom = roden.
                                </span>
                            </div>

                            <button type="submit" class="btn btn-outline-primary">
                                Gem mappe-indstilling
                            </button>
                        </form>

                        <form method="post" asp-page-handler="ConnectGoogleDrive" class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                Forbind / skift Google Drive konto
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Management/Index" class="btn btn-outline-secondary">
            Tilbage til administrationspanel
        </a>
    </div>
</div>