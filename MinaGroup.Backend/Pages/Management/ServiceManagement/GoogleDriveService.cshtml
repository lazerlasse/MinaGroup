@page
@model MinaGroup.Backend.Pages.Management.ServiceManagement.GoogleDriveServiceModel
@{
    ViewData["Title"] = "Google Drive Opsætning";
}

<h1 class="text-center display-4 fw-bold text-primary mb-4">@ViewData["Title"]</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="p-4 border rounded shadow-sm bg-light">

            <form method="post" asp-page-handler="Save">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="Input.IsEnabled" class="form-check-input" type="checkbox" />
                    <label asp-for="Input.IsEnabled" class="form-check-label fw-bold">
                        Aktivér upload af PDF'er til Google Drive
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.RootFolderId" class="form-label fw-bold">Root folder ID i Google Drive</label>
                    <input asp-for="Input.RootFolderId" class="form-control" />
                    <small class="text-muted">
                        ID fra Google Drive URL, fx:<br />
                        <code>https://drive.google.com/drive/folders/<strong>HER-ER-ID'ET</strong></code>
                    </small>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="/Management/Index" class="btn btn-outline-secondary">Tilbage</a>
                    <button type="submit" class="btn btn-outline-primary fw-bold">Gem opsætning</button>
                </div>
            </form>

            <hr />

            <h5 class="fw-bold">Google Drive forbindelse</h5>

            <p class="mb-2">
                @if (Model.Input.HasRefreshToken && !string.IsNullOrWhiteSpace(Model.Input.ConnectedAccountEmail))
                {
                    <span class="badge bg-success">Forbundet</span>
                    <span class="ms-2">(@Model.Input.ConnectedAccountEmail)</span>
                }
                else
                {
                    <span class="badge bg-secondary">Ikke forbundet</span>
                }
            </p>

            @if (!Model.HasGlobalDriveSettings)
            {
                <div class="alert alert-warning">
                    Den globale Google Drive klient er endnu ikke konfigureret af systemadministratoren.<br />
                    Kontakt <strong>SysAdmin</strong> for at sætte Client ID / Secret op under systemindstillingerne.
                </div>
            }

            <form method="post" asp-page-handler="Connect" class="d-inline">
                <button type="submit"
                        class="btn btn-primary"
                        @(Model.HasGlobalDriveSettings ? null : "disabled")>
                    Forbind til Google Drive
                </button>
            </form>

            @if (Model.Input.HasRefreshToken)
            {
                <form method="post" asp-page-handler="Disconnect" class="d-inline ms-2">
                    <button type="submit" class="btn btn-outline-danger">
                        Fjern forbindelse
                    </button>
                </form>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}