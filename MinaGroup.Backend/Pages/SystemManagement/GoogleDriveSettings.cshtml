@page
@model MinaGroup.Backend.Pages.SystemManagement.GoogleDriveSettingsModel
@{
    ViewData["Title"] = "Google Drive – Global klient";
}

<div class="container mt-5">
    <h1 class="text-center display-4 mb-2 fw-bold text-primary">@ViewData["Title"]</h1>
    <p class="text-center fs-5 text-muted mb-4">
        Opsæt den globale OAuth klient til Google Drive, som bruges af alle organisationer.
    </p>

    <hr />

    @if (Model.IsConfigured)
    {
        <div class="alert alert-success">
            <strong>Google Drive klienten er konfigureret.</strong><br />
            Client ID og Client Secret er gemt og kan bruges af organisationerne.
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <strong>Google Drive klienten er endnu ikke fuldt konfigureret.</strong><br />
            Udfyld både <em>Client ID</em> og <em>Client Secret</em> og gem for at aktivere integrationen.
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="p-4 border rounded shadow-sm bg-light">

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.ClientId" class="form-label fw-bold">Client ID</label>
                        <input asp-for="Input.ClientId" class="form-control" />
                        <span asp-validation-for="Input.ClientId" class="text-danger"></span>
                        <small class="text-muted">
                            Kopiér fra <strong>Google Cloud Console → Credentials → OAuth 2.0 Client IDs</strong>.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ClientSecret" class="form-label fw-bold">Client Secret</label>
                        <input asp-for="Input.ClientSecret" class="form-control" />
                        <span asp-validation-for="Input.ClientSecret" class="text-danger"></span>
                        <small class="text-muted">
                            Secret vises ikke igen efter gem. Udfyld kun hvis du ønsker at ændre den.
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Redirect URI (til Google Cloud Console)</label>
                        <input type="text"
                               class="form-control"
                               value="@Model.OAuthRedirectUri"
                               readonly />
                        <small class="text-muted">
                            Tilføj denne URL under <strong>Authorised redirect URIs</strong> i din OAuth 2.0 klient i Google Cloud.
                        </small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-page="/SystemManagement/Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Tilbage
                        </a>
                        <button type="submit" class="btn btn-outline-primary fw-bold">
                            <i class="bi bi-save"></i> Gem indstillinger
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}