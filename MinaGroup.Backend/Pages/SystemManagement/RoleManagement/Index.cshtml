@page
@model MinaGroup.Backend.Pages.SystemManagement.RoleManagement.IndexModel
@{
    ViewData["Title"] = "Rolleadministration";
}

<h1>Rolleadministration</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Opret ny rolle</a>
    <a asp-page="/SystemManagement/Index" class="btn btn-secondary">Tilbage til System Management</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Id</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.Roles)
        {
            var isCore = MinaGroup.Backend.Pages.SystemManagement.RoleManagement.IndexModel.IsCoreRole(role.Name);
            <tr>
                <td>@role.Name</td>
                <td>@role.Id</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-info">Rediger</a>
                    @if (!isCore)
                    {
                        <a asp-page="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Slet</a>
                    }
                    else
                    {
                        <span class="text-muted">Systemrolle</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>