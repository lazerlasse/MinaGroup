@page
@model MinaGroup.Backend.Pages.SystemManagement.RoleManagement.DeleteModel
@{
    ViewData["Title"] = "Slet rolle";
}

<h1>Slet rolle</h1>

@if (Model.Role is null)
{
    <p class="text-danger">Rollen blev ikke fundet.</p>
}
else
{
    <h4>Er du sikker på, at du vil slette denne rolle?</h4>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Role.Id</dd>

        <dt class="col-sm-2">Navn</dt>
        <dd class="col-sm-10">@Model.Role.Name</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Slet</button>
        <a asp-page="Index" class="btn btn-secondary">Annuller</a>

        <div class="text-danger mt-2">
            @Html.ValidationSummary()
        </div>
    </form>
}