@page
@model MinaGroup.Backend.Pages.SystemManagement.RoleManagement.EditModel
@{
    ViewData["Title"] = "Rediger rolle";
}

<h1>Rediger rolle</h1>

<form method="post">
    <input type="hidden" asp-for="Input.Id" />

    <div class="form-group">
        <label asp-for="Input.Name"></label>
        @if (Model.Input.IsCoreRole)
        {
            <input asp-for="Input.Name" class="form-control" readonly />
        }
        else
        {
            <input asp-for="Input.Name" class="form-control" />
        }
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    @if (Model.Input.IsCoreRole)
    {
        <p class="text-muted mt-2">
            Dette er en systemrolle og kan ikke omdøbes.
        </p>
    }

    <button type="submit" class="btn btn-primary mt-2">Gem</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Tilbage</a>

    <div class="text-danger mt-2">
        @Html.ValidationSummary()
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}